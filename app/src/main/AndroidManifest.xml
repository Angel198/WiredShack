<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaylax.wiredshack">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme.one"
        android:usesCleartextTraffic="true">
        <activity android:name=".WebViewActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one"/>
        <activity
            android:name=".LoginSignupActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".eventManager.assignEvent.AssignEventActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one" />
        <activity
            android:name=".user.liveStream.LiveStreamActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode"
            android:theme="@style/BaseTheme.one" />
        <activity
            android:name=".eventManager.liveStream.VideoBroadcastActivity"
            android:theme="@style/BaseTheme.one" />
        <activity
            android:name=".user.upcoming.UpcomingEventActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one" />
        <activity
            android:name=".eventimage.EventImagesActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one" />
        <activity
            android:name=".eventManager.followed.ManagerFollowedActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one" />
        <activity
            android:name=".user.managerDetails.ManagerDetailsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one" />
        <activity
            android:name=".user.following.UserFollowingActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one" />
        <!--
<activity
            android:name=".eventManager.editEvent.ManagerEditEventActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one" />
        -->
        <activity
            android:name=".eventManager.editEvent.ManagerEditEventNewActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one" />
        <activity
            android:name=".user.eventDetails.EventDetailsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one" />
        <activity
            android:name=".eventManager.dashboard.DashboardEventManagerActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".user.dashboard.DashboardActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".ForgetPasswordActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme.one">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" /> <!-- The API key for Google Maps-based APIs. -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_place_key" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>

</manifest>